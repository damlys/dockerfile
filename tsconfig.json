{
  "include": ["./src/index.ts", "./src/bin/dockerfile.ts"],
  "exclude": ["./node_modules", "./**/*.test.ts", "./**/*.spec.ts"],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./src-cjs",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2018"],
    "target": "ES2018",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false
  }
}
